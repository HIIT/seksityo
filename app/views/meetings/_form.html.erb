<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :nickname, :class => "textfield", placeholder: "Nickname" %>
  </div>
  <div class="field">
    <%= f.text_field :phone_number, :class => "textfield", placeholder: "Phone Number"%>
  </div>
  <div class="field">
    <div class="duration-container">
      <a href="" class="duration-select">30m</a>
    </div>
    <div class="duration-container">
      <a href="" class="duration-select">1h</a>
    </div>
    <div class="duration-container">
      <a href="" class="duration-select selected">2h</a>
    </div>

    <%= f.number_field :duration, :class => "numfield" %>
  </div>

  <div class="actions">
    <%= f.submit 'Start timer', :class => "submitbutton"%>
  </div>
<% end %>
