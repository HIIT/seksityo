<script type="text/javascript">
    var meeting_id = <%= @meeting.id %>;
    var meeting_created = "<%= @meeting.created_at %>"
    var meeting_updated = "<%= @meeting.updated_at %>";
</script>
<%= javascript_include_tag "locator" %>
<h1>Informing your Artemis in</h1>
<div class="info-timer">
  <% if @meeting.time_to_live == 1 %>
      <%= @meeting.time_to_live %> minute
  <% else %>
      <%= @meeting.time_to_live %> minutes
  <% end %>
</div>


<div class="actions">
  <%= button_to "I'm OK", {action: "meeting_ok", controller: "meetings"}, class: 'submitbutton' %>
  <%= button_to "Send Alert!", {action: "send_alert", controller: "meetings"}, class: 'alertbutton' %>
  <%= button_to "Refresh Location", 'javascript:getPosition();', class: 'refreshbutton' %>
</div>



<div id="location">
  <% if not @meeting.longitude.nil? %>
      <a href="http://maps.google.com/maps?z=12&t=m&q=loc:<%= @meeting.latitude %>+<%= @meeting.longitude %>" target="_blank">Last
        updated location</a>
  <% end %>
</div>

<div id="formdiv">
  <form id="locationform" method="post" action="/meetings/<%= @meeting.id %>">
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <input id="latitude" type="hidden">
    <input id="longitude" type="hidden">
  </form>
</div>
